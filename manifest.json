{
  "manifest_version": 3,
  "name": "Task Recorder",
  "version": "1.0",
  "description": "Records user actions and screen during tasks",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads",
    "desktopCapture",
    "system.display"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["recorder.js"],
      "run_at": "document_start"
    }
  ],
  "incognito": "split"
}
